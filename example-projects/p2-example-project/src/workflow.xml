<workflow>
    <analyzers>
        <step>
            <name>CSV Analyzer</name>
            <classHint>org.eclipse.sw360.antenna.workflow.analyzers.CsvAnalyzer</classHint>
            <configuration>
                <entry key="base.dir" value="${project.basedir}"/>
                <entry key="file.path" value="src/dependencies.csv"/>
            </configuration>
        </step>
    </analyzers>
    <processors>
        <step>
            <name>P2 Resolver</name>
            <classHint>org.eclipse.sw360.antenna.workflow.processors.enricher.P2Resolver</classHint>
            <configuration>
                <entry key="repositories" value="${project.basedir}/additional_p2_resources"/>
            </configuration>
        </step>
    </processors>
</workflow>
