<workflow>
    <analyzers><analyzer>
            <name>CSV Analyzer</name>
            <classHint>org.eclipse.sw360.antenna.workflow.analyzers.CsvAnalyzer</classHint>
            <analyzerConfiguration>
                <entry>
                    <key>file.path</key>
                    <value>${basedir}/reportdata.csv</value>
                </entry>
                <entry>
                    <key>base.dir</key>
                    <value>${project.build.directory}/sources</value>
                </entry>
            </analyzerConfiguration>
        </analyzer>
    </analyzers>
</workflow>
